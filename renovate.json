{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>planetscale/renovate-config"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "schedule": [
        "after 6pm on friday"
      ]
    }
  ]
}
